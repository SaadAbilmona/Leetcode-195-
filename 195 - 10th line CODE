#include <iostream>
#include <fstream>  // for file handling
#include <string>   // for using string

using namespace std;

int main() {
    // Writing to a file
    ofstream outFile("example.txt"); // Creates the file (if it doesn't exist)

    if (!outFile) { // Check if the file is created successfully
        cerr << "Error opening file for writing!" << endl;
        return 1;
    }

    for (int i = 1; i < 11; i++) {
        outFile << "line " << i << endl;
    }
    outFile.close(); // Close the file after writing

    // Reading from the file
    ifstream inFile("example.txt"); // Opens the file for reading

    if (!inFile) { // Check if the file exists and can be opened
        cerr << "Error opening file for reading!" << endl;
        return 1;
    }

    string line;
    int lineNumber = 1;
    while (getline(inFile, line)) {  // Reads file line by line
        if (lineNumber == 10) {
            cout << line << endl;    // Print line 10
            break;  // Exit the loop after printing line 10
        }
        lineNumber++;
    }

    inFile.close(); // Close the file after reading

    return 0;
}
